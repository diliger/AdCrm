@{
    Layout = null;
}
<div id="divPaymentsDialog">
    <div class="box">
        <table class="grid-simple grid max">
            <thead>
                <tr>
                    <th>
                        Проект
                    </th>
                    <th>
                        <div class="th">
                            <span>Дата</span>
                        </div>
                    </th>
                    <th>
                        Сумма
                    </th>
                </tr>
            </thead>
            <tbody data-bind="foreach: $root.data() ? $root.data().payments : []">
                <tr>
                    <td>
                        <span data-bind="text: project"></span>
                    </td>
                    <td>
                        <span data-bind="text: date"></span>
                    </td>
                    <td>
                        <div class="text-right">
                            <span data-bind="text: z.toDs(sum)"></span>
                            руб.
                        </div>
                    </td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="pager-container totals">
                        <div class="toRight pager">
                            <div class="box-float">
                                <div class="toLeft w150px text-left">Сумма платежей:</div>
                                <div class="toRight w150px bold text-right" data-bind="text: z.toDs($root.data() ? $root.data().payed * 1 : 0) + ' руб.'"></div>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="3" class="pager-container totals">
                        <div class="toRight pager">
                            <div class="box-float">
                                <div class="toLeft w150px text-left">Остатки к оплате:</div>
                                <div class="toRight w150px bold text-right" data-bind="text: z.toDs($root.data() ? $root.data().debt * 1 : 0) + ' руб.'"></div>
                            </div>
                        </div>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
<script type="text/javascript" src="@Url.ContentVersion("~/Scripts/Views/AllReports/PaymentsDialog.js")"></script>